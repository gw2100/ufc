<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="us.galleryw.ufc.backend">
 <class name="Vote" table="VOTE">
  <composite-id name="id" class="VoteId">
   <key-property name="uglyFaceId" column="uglyface_id"/>
   <key-property name="voterId" column="voter_id"/>
  </composite-id>
  <many-to-one name="uglyFace" class="UglyFace" insert="false" update="false">
   <column name="uglyface_id" />
  </many-to-one>
  <many-to-one name="voter" class="User" insert="false" update="false">
   <column name="voter_id"/>
  </many-to-one>
  
  <property name="votingIp"/>
  <property name="votingDate"  type="date"/>
 </class>

</hibernate-mapping>
